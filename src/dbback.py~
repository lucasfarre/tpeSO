# -'- coding: iso8859-1 -'-

import os
import cfunctions
from functions import *
from classes import *

####################################################################################################
##### SRV Database Manager Back v2.0
##### Común para todas las implementaciones
####################################################################################################

databaseFileName = 'srv.json'

def getAllFlights():
    fd = open(databaseFileName, 'r')
    cfunctions.rdlock(fd.fileno())
    db = fd.read()
    flights = fromJson(db)
    cfunctions.unlock(fd.fileno())
    fd.close()
    return flights

def checkIn(flightId, passenger, seat):
    fd = open(databaseFileName, 'r+')
    cfunctions.rdwrlock(fd.fileno())
    db = fd.read()
    flights = fromJson(db)
    for flight in flights:
        if flight['id'] == flightId:
            for s in flight['aircraft']['seats']:
                if s['column'] == seat['column'] and s['row'] == seat['row']:
                    if s['status'] == False:
                        s['passenger'] = passenger
                        s['status'] = True
                    else:
                        print 'El asiento se ha ocupado. Intente con otro'.
    updated = toJson(flights)
    reWrite(fd,updated)
    cfunctions.unlock(fd.fileno())
    fd.close()
    
def addFlight(flight):
    fd = open(databaseFileName, 'r+')
    cfunctions.rdwrlock(fd.fileno())
    db = fd.read()
    flights = fromJson(db)
    for f in flights :
       if f['id'] == flight['id'] :
           return None
    flights.append(flight)
    updated = toJson(flights)
    reWrite(fd,updated)
    cfunctions.unlock(fd.fileno())
    fd.close()

def removeFlight(flightIndex):
    fd = open(databaseFileName, 'r+')
    cfunctions.rdwrlock(fd.fileno())
    db = fd.read()
    flights = fromJson(db)
    del flights[flightIndex]
    updated = toJson(flights)
    reWrite(fd,updated)
    cfunctions.unlock(fd.fileno())
    fd.close()

def reWrite(fd,data):
    fd.seek(0)
    fd.truncate()
    fd.write(data)
    fd.flush()
    os.fsync(fd.fileno())
